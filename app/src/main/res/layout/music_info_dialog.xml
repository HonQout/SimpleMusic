<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/mid_song"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:text="@string/mid_song" />

    <TextView
        android:id="@+id/mid_singer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/mid_singer" />

    <TextView
        android:id="@+id/mid_duration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/mid_duration" />

    <TextView
        android:id="@+id/mid_path"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/mid_path" />

    <TextView
        android:id="@+id/mid_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/mid_size" />

    <Button
        android:id="@+id/mid_play"
        android:layout_width="wrap_content"
        android:text="@string/play"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/mid_vifm"
        android:layout_width="wrap_content"
        android:text="@string/view_in_file_manager"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />

</LinearLayout>