<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/user_interface">
        <ListPreference
            app:entries="@array/theme_color_entries"
            app:entryValues="@array/theme_color_values"
            app:iconSpaceReserved="false"
            app:key="theme_color"
            app:title="@string/theme_color"
            app:useSimpleSummaryProvider="true" />
        <ListPreference
            app:entries="@array/night_mode_entries"
            app:entryValues="@array/night_mode_values"
            app:iconSpaceReserved="false"
            app:key="night_mode"
            app:title="@string/night_mode"
            app:useSimpleSummaryProvider="true" />
        <SwitchPreferenceCompat
            android:summary="@string/immersion_hint"
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="immersion_status_bar"
            app:title="@string/immersion_status_bar" />
        <SwitchPreferenceCompat
            android:summary="@string/immersion_hint"
            app:defaultValue="true"
            app:iconSpaceReserved="false"
            app:key="immersion_navigation_bar"
            app:title="@string/immersion_navigation_bar" />
    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/scan">
        <SeekBarPreference
            android:max="60"
            app:adjustable="true"
            app:defaultValue="0"
            app:iconSpaceReserved="false"
            app:key="filter_short_audio"
            app:min="0"
            app:seekBarIncrement="1"
            app:showSeekBarValue="true"
            app:title="@string/filter_short_audio" />
        <SeekBarPreference
            android:max="1000"
            app:adjustable="true"
            app:defaultValue="0"
            app:iconSpaceReserved="false"
            app:key="filter_small_audio"
            app:min="0"
            app:seekBarIncrement="10"
            app:showSeekBarValue="true"
            app:title="@string/filter_small_audio" />
        <SwitchPreferenceCompat
            android:summary="@string/strong_scan_mode_hint"
            app:defaultValue="false"
            app:iconSpaceReserved="false"
            app:key="strong_scan_mode"
            app:title="@string/strong_scan_mode"/>
    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/audio_and_play">

        <SwitchPreferenceCompat
            app:iconSpaceReserved="false"
            app:key="play_synchronously"
            app:title="@string/play_synchronously" />
        <Preference
            app:iconSpaceReserved="false"
            app:key="equalizer"
            app:title="@string/equalizer" />
        <Preference
            app:iconSpaceReserved="false"
            app:key="system_sound_settings"
            app:title="@string/system_sound_settings" />
    </PreferenceCategory>

    <PreferenceCategory
        app:iconSpaceReserved="false"
        app:title="@string/about">
        <Preference
            app:iconSpaceReserved="false"
            app:key="version"
            app:summary="@string/version_name"
            app:title="@string/version" />
    </PreferenceCategory>

</PreferenceScreen>